@model UserRoleViewModel

<form method="post">
    <div>
        <h1>User Name : @Model.UserName</h1>
        <input hidden type="text" asp-for="UserName" class="form-control" value="@Model.UserName"/>
        <br>
    </div>
    
    <div>
        <label>Roles:</label>
        @for (int i=0; i<Model.Roles.Count();i++)
        {
            <div>
                <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                <label>@Model.Roles[i].DisplayName</label>
                <input type="hidden" value="@Model.Roles[i].DisplayName"asp-for="@Model.Roles[i].DisplayName" />
            </div>
        }
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
